:class Savi.Count.Spec
  :is Spec
  :const describes: "Count"

  :it "counts upward, starting with 0, excluding the given number itself"
    count = USize[0]
    count_sum = USize[0]
    count_return = Count.to(5) -> (i |
      count = count + 1
      count_sum = count_sum + i
    )

    assert: count_return == 5
    assert: count == 5
    assert: count_sum == 10
