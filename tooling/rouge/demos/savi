:import "Spec"

:actor Main
  :new (env)
    Spec.Process.run(env, [
      Spec.Run(AdditionSpec).new(env)
    ])

:class AdditionSpec
  :is Spec
  :const describes: "Addition"

  :: Return the number 2 (written in hex, just for fun).
  :const two U64'val: 0x02

  :it "adds two twos"
    assert: @two + '\x02' == 4
